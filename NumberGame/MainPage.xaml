<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NumberGame.MainPage">
    <Grid
        Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Лого и подпись-->
        <VerticalStackLayout
            Grid.Row="0">
            <Image
                Source="icon.svg"
                />

            <Label
                FontSize="30"
                HorizontalTextAlignment="Center"
                VerticalOptions="End">
                Математическая игра "Speed math"
            </Label>
        </VerticalStackLayout>


        <VerticalStackLayout
            VerticalOptions="End"
            Grid.Row="1"
            Spacing="15">

            <!--Кнопка начать-->
            <Button
                Text="Начать"
                Margin="0,20,0,0"
                FontSize="40"
                Clicked="StartGame_Click"/>
                
            <!--Правила-->
            <Button
                Text="Правила"
                Clicked="GoToAbout_Click"/>
            
            <!--Список лидеров-->
            <Button
                Text="Список лидеров"
                Clicked="GoToLieders_Click"/>


        </VerticalStackLayout>
    </Grid>

</ContentPage>
